{
  "name": "hades",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/apps/**"
  ],
  "scripts": {
    "lerna:tsc": "npx lerna run tsc",
    "lerna:bootstrap": "npx lerna bootstrap",
    "clean": "lerna clean",
    "clean:update": "lerna clean && lerna bootstrap",
    "lint": "lerna run lint --parallel",
    "eslint:fix": "lerna run eslint:fix",
    "typecheck": "lerna run typecheck --parallel",
    "start:api": "lerna run start --scope=api",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=true npm run lint"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.33",
    "@types/jest": "^29.5.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "lerna": "^6.6.1",
    "prettier": "^2.8.7",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "bson": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "gridfs-stream": "^1.1.1",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "multer-gridfs-storage": "^5.0.2"
  }
}
